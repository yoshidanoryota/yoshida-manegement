<header class="header">
    <div class="box box-nav">
      <ul class="inner-nav">
        <li class="header-title">Manegement for Cloud</li>
        <li class="menu-li">
         <%= link_to "#{current_user.name}さん", user_path(current_user.id), class: :menu %>
         <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: :menu %>
         </li>
      </ul>
    </div>
</header>


<div class="new-main">
  <div>
    <%=link_to 'TOPにもどる', root_path, class:"back-btn" %>
  </div>
  <div class="title">
    <h1>出勤入力画面</h1>
  </div>

  <%= form_with model: @attendance, local: true do |f| %>

  <div class="form-body">
    <%# 日付 %>
    <div class="attendance-date">
      <div class="weight-bold-text">
            日付
      </div>
          <%= f.date_field :attendance_day, class:"today-date", id:"today-date"%>
    </div>
    <%# 日付 %>

    <%# スタイル %>
    <div class="attendance--style">
      <div class="weight-bold-text">
            出勤時間
      </div>
          <%= f.collection_select(:arrive_id, Arrive.all, :id, :name, {}, {class:"attendance-style"}) %>
    </div>
    <%# スタイル %>

    <%# 早出 %>
    <div class="attendance--style">
      <div class="weight-bold-text">
            時間外時間(早出)
      </div>
          <%= f.text_field :flying_id, class:"attendance-style-flying", value:0%> 
          <span class="weight-bold-text">時間</span>
          <div>
          <br>
          ※注) 半角数字で入力<br>
          ※注) 時間単位で入力<br>
          ※例) 時間外時間が1時間30分の場合：1.5
          </div>
    </div>
    <%# 早出 %>

    <%# ボタン %>
    <div class="attendance-button">
      <%= f.submit "出勤登録する" ,class:"button" %>
    </div>
    <%# /ボタン %>

  </div>

  
  <%end%>

  




</div>